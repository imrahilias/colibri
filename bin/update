#!/bin/zsh
# backup stray config files
autoload colors; colors

case $(hostname) in
    archaeopteryx)
        files=(
            "/etc/systemd/system/rsnapshot-weekly.timer"
            "/etc/systemd/system/rsnapshot-daily.timer"
            "/etc/systemd/system/rsnapshot-hourly.timer"
            "/etc/systemd/system/rsnapshot-monthly.timer"
            "/etc/systemd/system/rsnapshot@.service"
            "/etc/rsnapshot.conf"
            "/etc/pacman.d/hooks/nvidia.hook"
        )
        ;;
    colibri)
        ;;
esac

files+=(
    "/etc/X11/xorg.conf.d/70-synaptics.conf"
    "/etc/fstab"
    "/etc/gdm/custom.conf"
    "/etc/mkinitcpio.conf"
    "/etc/modprobe.d/blacklist.conf"
    "/etc/pacman.conf"
    "/etc/pacman.d/hooks/xkeyboard-config.hook"
    "/etc/pacman.d/hooks/zsh.hook"
    "/etc/pam.d/login"
    "/etc/pam.d/system-auth"
    "/etc/pam.d/system-local-login"
    "/etc/pam.d/system-login"
    "/etc/pam.d/xsecurelock"
    "/etc/profile"
    "/etc/profile.d/xinitrc.sh"
    "/etc/security/limits.conf"
    "/etc/systemd/system/kill-printd.service"
    "/etc/systemd/system/user.slice"
    "/etc/systemd/system/x11-autologin.service"
    "/usr/share/xsessions/awesome.desktop"
    "/boot/loader/loader.conf"
    "/boot/loader/entries/"*".conf"
)

loc="/home/$USER/.$(hostname)"
echo "$fg_bold[blue]::$fg_bold[white] Running on $loc $reset_color"

echo "$fg_bold[blue]::$fg_bold[white] Archive /boot,/etc,/usr. $reset_color"
for file in "${files[@]}"; do
    sudo cp --parents --verbose "/$file" "$loc/"
done

# https://wiki.archlinux.org/index.php/System_maintenance
# https://wiki.archlinux.org/index.php/Pacman/Tips_and_tricks

# remove cache
echo "$fg_bold[blue]::$fg_bold[white] Clear local cache. $reset_color"
echo "   rm -rf .cache/"
rm -rf /home/m/.cache/

# backup database
echo "$fg_bold[blue]::$fg_bold[white] Backup the local pacman database. $reset_color"
echo "   tar -cjf $loc/pacman_database.tar.bz2 /var/lib/pacman/local"
tar -cjf $loc/pacman_database.tar.bz2 /var/lib/pacman/local

# list pkg
echo "$fg_bold[blue]::$fg_bold[white] Keep a list of explicitly installed packages. $reset_color"
echo "   pacman -Qqe > $loc/installed_packages"
pacman -Qqe > $loc/installed_packages

# list aur
echo "$fg_bold[blue]::$fg_bold[white] Keep a list of manually installed packages (aur). $reset_color"
echo "   pacman -Qm > $loc/installed_packages_manually"
pacman -Qm > $loc/installed_packages_manually


exit 0
